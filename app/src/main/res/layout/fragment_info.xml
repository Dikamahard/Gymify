<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.InfoFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingBottom="100dp"
       >

      <TextView
          android:id="@+id/textView10"
          android:layout_width="355dp"
          android:layout_height="73dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="44dp"
          android:layout_marginEnd="16dp"
          android:fontFamily="@font/mazzardm_regular"
          android:text="Gymify adalah aplikasi Android berbasis machine learning yang dapat mendeteksi berbagai macam alat gym berdasarkan gambar yang diunggah atau di-scan guna menghasilkan informasi detail terkait alat tersebut"
          android:textColor="#000000"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imageView5" />

      <TextView
          android:id="@+id/textView8"
          android:layout_width="351dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="4dp"
          android:layout_marginEnd="16dp"
          android:fontFamily="@font/mazzardm_regular"
          android:text="1. Install aplikasi Gymify diperangkat Anda \n2. Izinkan aplikasi untuk penggunaan kamera/galeri \n3. Halaman Beranda akan menampilkan informasi mengenai alat gym \n4. Halaman Map akan menampilkan lokasi gym yang ada disekitar pengguna \n5. Halaman Scan untuk mendeteksi alat gym dengan mengarahkan kamera ke objek atau dengan mengunggah foto alat gym ke aplikasi \n6. Halaman Riwayat berisi riwayat alat gym yang dicari pengguna \n7. Halaman Info berisi Tentang Aplikasi, Panduan Penggunaan dan Log Out."
          android:textColor="#000000"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView7" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/mazzardh_semibold"
          android:text="Panduan Penggunaan"
          android:textColor="#000000"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.086"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView10" />

      <Button
          android:id="@+id/btn_logout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          android:fontFamily="@font/mazzardh_semibold"
          android:text="Log Out"
          android:textAlignment="center"
          android:textAllCaps="false"

          android:textColor="#000000"
          app:layout_constraintEnd_toEndOf="@+id/textView8"
          app:layout_constraintStart_toStartOf="@+id/textView8"
          app:layout_constraintTop_toBottomOf="@+id/textView8" />

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="310dp"
          android:layout_height="214dp"
          android:layout_marginTop="52dp"
          android:src="@drawable/logokotak"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.493"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>